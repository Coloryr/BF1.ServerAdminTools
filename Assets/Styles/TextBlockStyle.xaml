<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="IconFontBaseStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontFamily" Value="../Fonts/#iconfont" />
    </Style>

    <Style
        x:Key="IconFontNormalStyle"
        BasedOn="{StaticResource IconFontBaseStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style
        x:Key="IconFontStyle"
        BasedOn="{StaticResource IconFontBaseStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style
        x:Key="IconFontAboutlStyle"
        BasedOn="{StaticResource IconFontBaseStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="36" />
    </Style>

    <Style x:Key="TextBlockTitleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Margin" Value="5" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

</ResourceDictionary>