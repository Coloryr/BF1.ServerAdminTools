<UserControl
    x:Class="BF1.ServerAdminTools.Wpf.Views.OptionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="View_Option"
    d:DesignHeight="900"
    d:DesignWidth="1600"
    Loaded="View_Option_Loaded"
    mc:Ignorable="d">

    <Grid Background="#77FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="5">
            <GroupBox Header="按键音">
                <WrapPanel>
                    <RadioButton
                        x:Name="ClickAudioSelect0"
                        Margin="5"
                        Checked="ClickAudioSelect0_Checked"
                        Content="无"
                        GroupName="ClickAudioSelect" />
                    <RadioButton
                        x:Name="ClickAudioSelect1"
                        Margin="5"
                        Checked="ClickAudioSelect1_Checked"
                        Content="提示音1"
                        GroupName="ClickAudioSelect" />
                    <RadioButton
                        x:Name="ClickAudioSelect2"
                        Margin="5"
                        Checked="ClickAudioSelect2_Checked"
                        Content="提示音2"
                        GroupName="ClickAudioSelect" />
                    <RadioButton
                        x:Name="ClickAudioSelect3"
                        Margin="5"
                        Checked="ClickAudioSelect3_Checked"
                        Content="提示音3"
                        GroupName="ClickAudioSelect" />
                    <RadioButton
                        x:Name="ClickAudioSelect4"
                        Margin="5"
                        Checked="ClickAudioSelect4_Checked"
                        Content="提示音4"
                        GroupName="ClickAudioSelect" />
                    <RadioButton
                        x:Name="ClickAudioSelect5"
                        Margin="5"
                        Checked="ClickAudioSelect5_Checked"
                        Content="提示音5"
                        GroupName="ClickAudioSelect" />
                </WrapPanel>
            </GroupBox>
            <GroupBox Margin="0,-2,0,0" Header="检测游戏">
                <Grid Margin="5">
                    <Button
                        Click="Button_Click"
                        Content="重新检测游戏"
                        Style="{StaticResource ButtonStyle_Web}" />
                </Grid>
            </GroupBox>
            <GroupBox Margin="0,-2,0,0" Header="掉线自动重连">
                <StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <CheckBox
                            x:Name="Window_A"
                            Margin="5,0,20,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="启用掉线自动重连" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap">
                            注意：若要启动，需要将游戏设置窗口化运行，该操作会自动加入第一个收藏的服务器，请先回到主界面再启动
                        </TextBlock>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="5,0,5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="游戏分辨率" />
                        <RadioButton
                            x:Name="ClickXYSelect0"
                            Margin="5"
                            Checked="ClickXYSelect0_Checked"
                            Content="1280x720"
                            GroupName="ClickXYSelect" />
                        <RadioButton
                            x:Name="ClickXYSelect1"
                            Margin="5"
                            Checked="ClickXYSelect1_Checked"
                            Content="1024x768"
                            GroupName="ClickXYSelect" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="Button_Click_6"
                            Content="设置"
                            Style="{StaticResource ButtonStyle_Web}" />
                        <Button
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="Button_Click_7"
                            Content="获取截屏"
                            Style="{StaticResource ButtonStyle_Web}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Margin="0,-2,0,0" Header="Netty接口服务器">
                <StackPanel>
                    <Grid>
                        <Label
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="服务器端口" />
                        <TextBox
                            Name="Server_Port"
                            Width="60"
                            Margin="70,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="" />
                        <Label
                            Margin="130,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="服务器密钥" />
                        <TextBox
                            Name="Server_Key"
                            Width="233"
                            Margin="200,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Text="" />
                        <CheckBox
                            Name="AutoRun"
                            Margin="433,0,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Content="自动启动" />
                    </Grid>
                    <WrapPanel>
                        <CheckBox
                            x:Name="NettyBQ1"
                            Margin="5"
                            Content="广播踢出内容" />
                        <CheckBox
                            x:Name="NettyBQ2"
                            Margin="5"
                            Content="广播换边内容" />
                        <CheckBox
                            x:Name="NettyBQ3"
                            Margin="5"
                            Content="广播错误内容" />
                    </WrapPanel>
                    <UniformGrid Columns="2">
                        <Button
                            x:Name="Button_Server"
                            VerticalAlignment="Center"
                            Click="Button_Click_2"
                            Content="启动"
                            Style="{StaticResource ButtonStyle_Web}" />
                        <Button
                            VerticalAlignment="Center"
                            Click="Button_Click_1"
                            Content="设置"
                            Style="{StaticResource ButtonStyle_Web}" />
                    </UniformGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Margin="0,-2,0,0" Header="背景图">
                <StackPanel>
                    <UniformGrid Columns="2">
                        <Button
                            VerticalAlignment="Center"
                            Click="Button_Click_3"
                            Content="选择"
                            Style="{StaticResource ButtonStyle_Web}" />
                        <Button
                            VerticalAlignment="Center"
                            Click="Button_Click_4"
                            Content="删除"
                            Style="{StaticResource ButtonStyle_Web}" />
                    </UniformGrid>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox
                            x:Name="Window_O"
                            Margin="5,0,20,0"
                            VerticalAlignment="Center"
                            Content="启用窗口虚化" />
                        <TextBlock
                            Width="120"
                            Margin="0,0,5,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Block.TextAlignment="Left"
                            Text="{Binding ElementName=Slider_BG_O, Path=Value, StringFormat=背景透明度 : {0:0}, FallbackValue='背景透明度 : '}" />
                        <Slider
                            x:Name="Slider_BG_O"
                            Width="200"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding ElementName=Window_O, Path=IsChecked}"
                            LargeChange="10"
                            Maximum="100"
                            Minimum="0"
                            Value="20" />
                        <Button
                            Margin="10,5,5,5"
                            HorizontalAlignment="Right"
                            Click="Button_Click_5"
                            Content="保存"
                            Style="{StaticResource ButtonStyle_Web}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
