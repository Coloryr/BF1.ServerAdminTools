<Window
    x:Class="BF1.ServerAdminTools.Wpf.Windows.MapRuleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BF1.ServerAdminTools.Wpf.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="地图规则设置"
    Width="500"
    Height="180"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <UniformGrid Grid.Row="1" Rows="3">
            <ComboBox
                Name="MapList"
                Margin="5"
                IsReadOnly="True" />
            <ComboBox
                Name="RuleList"
                Margin="5"
                DisplayMemberPath="Name"
                IsReadOnly="True"
                Style="{StaticResource ComboBox1}" />
            <Button
                Click="Button_Click"
                Content="确定"
                IsDefault="True"
                Style="{StaticResource ButtonStyle_Web}" />
        </UniformGrid>
    </Grid>
</Window>
